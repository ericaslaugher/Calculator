<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ActionButton" parent="CalculatorButton">
        <item name="android:backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>


    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">?attr/colorTertiaryContainer</item>
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
    </style>

</resources>